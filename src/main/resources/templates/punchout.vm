<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/html">
<head>
    <title>CAT Shopping Cart Response</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <h5>Your shopping card has been received</h5>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <h6><strong>Line items: </strong></h6>
        </div>
        <div class="col-sm-2">
            <h6>$order.count</h6>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <h6><strong>Total amount: </strong>
        </div>
        <div class="col-sm-2">
            <h6>$number.format("currency",$order.totalAmount)</h6>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <h6><strong>Currency: </strong></h6>
        </div>
        <div class="col-sm-2">
            <h6>$order.currency</h6>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <h6><strong><mark>ProcureDox Batch # :</mark> </strong></h6>
        </div>
        <div class="col-sm-2">
            <h6><mark>$order.batchNumber</mark></h6>
        </div>
    </div>
    <div class="row">
        <table class="table table-striped table-condensed table-responsive">
            <thead>
            <tr>
                <th><h6><strong>Line #</strong></h6></th>
                <th><h6><strong>Description</strong></h6></th>
                <th><h6><strong>Quantity</strong></h6></th>
                <th><h6><strong>Unit price</strong></h6></th>
                <th><h6><strong>UOM</strong></h6></th>
                <th><h6><strong>Part Id</strong></h6></th>
                <th><h6><strong>Auxiliary Id</strong></h6></th>
            </tr>
            </thead>
            <tbody>
                #foreach($line in $order.items)
                <tr>
                    <td><h6>$line.lineNumber</h6></td>
                    <td><h6>$line.description</h6></td>
                    <td><h6>$line.quantity</h6></td>
                    <td><h6>$number.format("currency",$line.unitPrice)</h6></td>
                    <td><h6>$line.unitOfMeasure</h6></td>
                    <td><h6>$line.supplierPartId</h6></td>
                    <td><h6>$line.supplierPartAuxilaryId</h6></td>
                </tr>
                #end
            </tbody>
        </table>
        </table>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</body>
</html>